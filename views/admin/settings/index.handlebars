        <div class="row justify-content-between align-items-center mb-10">
          <!-- Page Heading Start -->
          <div class="col-12 col-lg-auto mb-20">
            <div class="page-heading">
              <h3 class="title">تنظیمات</h3>
            </div>
          </div>
          <!-- Page Heading End -->

          <!-- Page Button Group End -->
        </div>
        <!-- Page Headings End -->

        <div class="row mbn-30">
          <!-- Revenue Statistics Chart Start -->
          <div class="col-md-12 mb-30">
            <div class="box">
              <div class="box-head">
                <div class="row">
                  <h4 class="title">تنظیمات بلاگ</h4>
                </div>
              </div>
              <div class="box-body">
                <form action="/admin/settings" method="POST">
                  <div class="row mbn-20">
                    <div class="col-12 mb-20">
                      <div class="row mbn-20">
                        <div class="col-lg-6 mb-20">
                          <label for="formLayoutCity1">عمومی</label>
                          <input type="text" id="formLayoutCity1" name="websiteTitle" class="form-control" placeholder="عنوان وبسایت" value="{{config.websiteTitle}}"/>
                        </div>

                        <div class="col-lg-6 mb-20">
                          <label for="formLayoutZip1">محتوا</label>
                          <input type="text" id="formLayoutZip1" class="form-control" name="posts_count_per_page" placeholder="10" value="{{config.posts_count_per_page}}"/>
                        </div>
                      </div>
                    </div>

                    <div class="col-12 mb-20">
                      <textarea name="websiteDescreption" id="formLayoutMessage1" class="form-control" placeholder="توضیحات وبسایت" rows="3">{{config.websiteDescreption}}</textarea>
                    </div>

                    <div class="col-12 mb-20">
                      <h6 class="mb-15">سایر تنظیمات</h6>

                      <div class="adomx-checkbox-radio-group">
                        <label class="adomx-checkbox primary"><input type="checkbox" name="register_state" {{#isCkecked config.register_state}}checked{{/isCkecked}}/> <i class="icon"></i> هر کس می تواند ثبت نام کند</label>
                        <label class="adomx-checkbox primary"><input type="checkbox" name="view_state" {{#isCkecked config.view_state}}checked{{/isCkecked}}/> <i class="icon"></i> کاربران می توانند دیدگاه‌ ثبت کنند</label>
                      </div>
                    </div>

                    <div class="col-12 mb-20">
                      <input type="submit" value="ذخیره سازی" class="button button-primary" />
                    </div>
                  </div>
                </form>
              </div>
            </div>
          </div>
          <!-- Revenue Statistics Chart End -->
        </div>