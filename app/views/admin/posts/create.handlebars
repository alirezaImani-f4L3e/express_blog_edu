<!-- Page Headings Start -->
        <div class="row justify-content-between align-items-center mb-10">
          <!-- Page Heading Start -->
          <div class="col-12 col-lg-auto mb-20">
            <div class="page-heading">
              <h3 class="title">مطالب <span>/ درج مطلب جدید</span></h3>
            </div>
          </div>
          <!-- Page Heading End -->

          <!-- Page Button Group End -->
        </div>
        <!-- Page Headings End -->

        <div class="row mbn-30">
          <!-- Revenue Statistics Chart Start -->
          <div class="col-md-12 mb-30">
            <div class="box">
              <div class="box-head">
                <div class="row">
                  <h4 class="title">اطلاعات مطلب</h4>
                </div>
              </div>
              <div class="box-body">
                <form method="POST" action="/admin/posts/store" enctype="multipart/form-data">
                  
                    <div class="col-12 mb-20">
                      <input type="text" id="formLayoutUsername3" class="form-control" placeholder="عنوان مطلب" name="title"/>
                    </div>
                    <div class="col-12 mb-20">
                      <input type="text" id="formLayoutEmail3" class="form-control" placeholder="نامک مطلب" name="slug"/>
                    </div>

                    <div class="col-12 mb-20">
                      <textarea id="mytextarea" class="form-control" placeholder="محتوای مطلب" name="content"></textarea>
                    </div>
                    
                    <div class="col-12 mb-20">
                     <select name="author" class="form-control">
                      {{#each users}}
                      <option value="{{this.id}}">{{this.full_name}}</option>
                      {{/each}}
                      </select>
                    </div> 
                    <div class="col-12 mb-20">
                     <label for="thumbNail">بارگذاری عکس شاخص</label>
                     <input type="file" name="thumbNail" id="thumbNail" class="form-control">
                    </div> 

                    <div class="col-12 mb-20">
                      <h6 class="mb-15">وضعیت مطلب</h6>
                      <div class="form-group">
                        <label class="inline"><input name="status" type="radio" value="0" checked/>پیش نویس</label>
                        <label class="inline"><input name="status" type="radio" value="2"/>منتشرشده</label>
                        <label class="inline"><input name="status" type="radio" value="1"/>در حال بازبینی</label>
                      </div>
                    </div>

                    <div class="col-12 mb-20">
                      <input type="submit" value="ذخیره سازی" class="button button-primary" />
                    </div>
                  </div>
                </form>
              </div>
            </div>
          </div>
          <!-- Revenue Statistics Chart End -->
        </div>